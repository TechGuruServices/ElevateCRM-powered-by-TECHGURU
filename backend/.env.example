# TECHGURU ElevateCRM - Environment Configuration Template
# Copy this to .env and fill in your values

# Application
DEBUG=true
ENVIRONMENT=development
BUILD_VERSION=0.1.0-dev

# Database - Use sqlite for dev, postgres for production
DB_BACKEND=sqlite
DATABASE_URL=sqlite+aiosqlite:///./elevatecrm.db
DATABASE_URL_SYNC=sqlite:///./elevatecrm.db
# For PostgreSQL (when Docker is available):
# DB_BACKEND=postgres
# DATABASE_URL=postgresql://elevatecrm:password@localhost:5432/elevatecrm
# DATABASE_URL_SYNC=postgresql://elevatecrm:password@localhost:5432/elevatecrm

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Keycloak (OIDC)
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=techguru-crm
KEYCLOAK_CLIENT_ID=elevatecrm-frontend
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Email (Development - Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@techguru.local

# External Integrations (leave empty for dev)
STRIPE_SECRET_KEY=
SHOPIFY_API_KEY=
QUICKBOOKS_CLIENT_ID=